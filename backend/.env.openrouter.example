# OpenRouter Integration Environment Variables
# Copy this file to .env and update the values

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_REFERER=https://yourdomain.com
OPENROUTER_TITLE=AI News Aggregator

# Security Configuration
# IMPORTANT: Generate a secure random key for production
ENCRYPTION_KEY=change_this_secure_encryption_key_in_production_32_chars_minimum

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_news_db
DB_USER=ai_news_user
DB_PASSWORD=secure_password_123

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_if_needed
REDIS_DB=0

# Application Configuration
NODE_ENV=development
PORT=5000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Rate Limiting (Optional overrides)
GLOBAL_RATE_LIMIT_WINDOW_MS=900000
GLOBAL_RATE_LIMIT_MAX=1000
SETTINGS_RATE_LIMIT_MAX=10
SUMMARIZATION_RATE_LIMIT_MAX=5
MODELS_RATE_LIMIT_MAX=30

# OpenRouter Model Defaults (Optional)
DEFAULT_SUMMARIZATION_MODEL=anthropic/claude-3-haiku
DEFAULT_CHAT_MODEL=openai/gpt-4o-mini
DEFAULT_FALLBACK_MODEL=meta-llama/llama-3.1-8b-instruct:free

# Usage Limits Defaults (Optional)
DEFAULT_DAILY_COST_LIMIT=1.0
DEFAULT_MONTHLY_COST_LIMIT=10.0
DEFAULT_REQUESTS_PER_HOUR=100
DEFAULT_TOKENS_PER_HOUR=50000

# Model Preferences Defaults (Optional)
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=1000
DEFAULT_ENABLE_STREAMING=false
DEFAULT_FALLBACK_ENABLED=true
DEFAULT_COST_OPTIMIZATION=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/openrouter.log

# Health Check Configuration
HEALTH_CHECK_INTERVAL=300000
HEALTH_CHECK_TIMEOUT=5000

# Batch Processing Configuration
MAX_BATCH_SIZE=100
BATCH_TIMEOUT=300000
MAX_CONCURRENT_BATCHES=5

# Cleanup Configuration
CLEANUP_OLD_RECORDS_DAYS=90
CLEANUP_COMPLETED_JOBS_DAYS=30

# Cache Configuration
MODEL_CACHE_TTL=3600
SETTINGS_CACHE_TTL=3600
USAGE_STATS_CACHE_TTL=300

# Monitoring Configuration
METRICS_COLLECTION_INTERVAL=60000
ERROR_ALERT_THRESHOLD=10
COST_ALERT_THRESHOLD=0.9