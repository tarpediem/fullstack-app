# Security Configuration Template
# Copy this to .env and fill in your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_news_db
DB_USER=ai_news_user
DB_PASSWORD=your_secure_database_password_here

# JWT Configuration (REQUIRED)
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters_long
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_different_from_jwt_secret
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=ai-news-api
JWT_AUDIENCE=ai-news-app

# Encryption (REQUIRED)
ENCRYPTION_KEY=your_32_character_encryption_key_here_exactly_32_chars

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com
FRONTEND_URL=http://localhost:3000

# Redis Configuration
REDIS_URL=redis://localhost:6379

# OAuth Configuration
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=/api/oauth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_CALLBACK_URL=/api/oauth/github/callback

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
BCRYPT_ROUNDS=12
MAX_USER_SESSIONS=5

# Content Security Policy
CSP_REPORT_URI=https://yourdomain.com/api/csp-report
CSP_REPORT_TO=csp-endpoint
CSP_REPORT_ONLY=false

# HTTPS and SSL
EXPECT_CT_REPORT_URI=https://yourdomain.com/api/expect-ct-report

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# API Keys for External Services
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_openai_org_id

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Environment
NODE_ENV=production

# Additional Security Headers
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# Session Configuration
SESSION_TIMEOUT=1800000
SESSION_EXTEND_ON_ACTIVITY=true

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# API Configuration
API_BASE_URL=https://api.yourdomain.com
WS_URL=wss://api.yourdomain.com

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=2000